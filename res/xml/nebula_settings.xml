<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/nebula_settings_title" >

        <!-- Status Bar -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.StatusBarSettings"
            android:icon="@drawable/ic_settings_statusbar"
            android:key="statusbar_category" android:title="@string/statusbar_title" />

        <!-- Quick Settings panel -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"
            android:key="quicksettings_category" android:title="@string/quicksettings_title" />

        <!-- Buttons -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"
            android:key="buttonsettings_category" android:title="@string/button_title" />

        <!-- Navigation Bar -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.NavigationBarSettings"
            android:icon="@drawable/ic_settings_navbar"
            android:key="navigationbar_category" android:title="@string/navbar_title" />

        <!-- Gestures -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.GestureSettings"
            android:icon="@drawable/ic_settings_gestures"
            android:key="gestures_category" android:title="@string/gestures_title" />

        <!-- Lock Screen -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.LockScreenSettings"
            android:icon="@drawable/ic_settings_lockscreens"
            android:key="lockscreen_category" android:title="@string/lockscreen_title" />

        <!-- Power Menu -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.PowerMenuSettings"
            android:icon="@drawable/ic_settings_powermenu"
            android:key="powermenu__category" android:title="@string/powermenu_title" />

        <!-- Recents -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.RecentsSettings"
            android:icon="@drawable/ic_settings_recents"
            android:key="recents_category" android:title="@string/recents_title" />

        <!-- Misc -->
        <PreferenceScreen android:fragment="com.nebula.settings.fragments.MiscSettings"
            android:icon="@drawable/ic_settings_miscs"
            android:key="misc_category" android:title="@string/misc_title" />

</PreferenceScreen>
